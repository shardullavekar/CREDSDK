<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cv"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txn_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_account_balance_wallet_pink_a200_36dp"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/txntimestamp"
                android:layout_below="@+id/txn_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="2 days ago"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txnType"
                android:text="Requested by"
                android:layout_toRightOf="@+id/txn_photo"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/merchant_name"
                android:text="Uber India"
                android:layout_toRightOf="@+id/txn_photo"
                android:layout_below="@+id/txnType"
                />

            <TextView
                android:id="@+id/txnamount"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Rs 1200.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txn_nature"
                android:text="Payment Declined"
                android:layout_toLeftOf="@+id/txn_status_image"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/txn_status_image"
                android:layout_below="@+id/txnamount"
                android:src="@drawable/ic_warning_red_600_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>