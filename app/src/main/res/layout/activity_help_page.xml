<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpPage">

    <TextView
        android:id="@+id/topLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Issues"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/topListview"
        android:layout_below="@+id/topLable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


    <TextView
        android:id="@+id/midLable"
        android:layout_below="@+id/topListview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Issues"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/midListview"
        android:layout_below="@+id/midLable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>